{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article": {
            "title": "Living in the shadow of a great man",
            "topic": "mitch",
            "author": "butter_bridge",
            "created_at": 1594329060000,
            "votes": 100,
            "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
            "comment_count": 0,
            "article_id": 1
          }
        }
      ]
    }
  },
  "GET /api/articles/article_id": {
    "description": "serves a specific article by its ID",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": 1594329060000,
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 11
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments on a specific article by the article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 10,
          "created_at": 1594329060000,
          "author": "butter_bridge",
          "body": "Great article!",
          "article_id": 1
        },
        {
          "comment_id": 2,
          "votes": 5,
          "created_at": 1594330060000,
          "author": "icellusedkars",
          "body": "I agree!",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/article_id/comments": {
    "description": "adds a comment for an article by it's article_id",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 3,
        "votes": 0,
        "created_at": 1635466800000,
        "author": "new_user",
        "body": "This is a new comment!",
        "article_id": 1
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article by article_id",
    "queries": [],
    "requestBody": {
      "description": "An object in the form { inc_votes: newVote }",
      "example": {
        "inc_votes": 1
      }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": 1594329060000,
        "votes": 101,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment by comment_id",
